# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                        controllers.Application.index

# JavaScript routes object
GET           /jsroutes.js                             controllers.Application.jsRoutes()

# Routes used by Angular
# ~~~~

# Authentication
POST          /login                                   controllers.Application.login()
POST          /logout                                  controllers.Application.logout()

# Users
GET           /users/:id                               controllers.Users.user(id: Long)
POST          /users                                   controllers.Users.createUser()
PUT           /users/:id                               controllers.Users.updateUser(id: Long)
DELETE        /users/:id                               controllers.Users.deleteUser(id: Long)
GET           /authuser                                controllers.Users.authUser()

# Static
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                            controllers.Assets.versioned(path="/public", file: Asset)


GET           /movies/sync                             @controllers.Movies.syncDbWithFiles
GET           /movies/status                           @controllers.Movies.showMovieStatus
GET           /movies/loadMissingDetails               @controllers.Movies.loadMissingMovieDetails
GET           /movies/updateDetails/:id                @controllers.Movies.updateDetails(id: String)
GET           /movies/updateConfig                     @controllers.Movies.updateTmdbConfiguration()
GET           /movies/list                             @controllers.Movies.listMovies
GET           /movies/details/:name                    @controllers.Movies.loadMovieDetails(name: String)

GET           /images/*path                            @controllers.Images.loadImage(path: String)

GET           /tv/sync                                 @controllers.TVShows.syncDbWithFiles
GET           /tv/loadMissingDetails                   @controllers.TVShows.loadMissingShowDetails
GET           /tv/updateDetails/:id                    @controllers.TVShows.updateDetails(id: String)
GET           /tv/list                                 @controllers.TVShows.listTVShows
GET           /tv/show/:name                           @controllers.TVShows.tvShowDetails(name: String)
GET           /tv/show/:name/episodes                  @controllers.TVShows.listEpisodes(name: String)

GET           /download/$diskNr<[12]>/*filePath        @controllers.Downloads.downloadFile(diskNr: Int, filePath)